---
import BlogStyles from '../components/BlogStyles.astro';

const nombre = "Eduardo";
const hoy = new Date().toLocaleDateString('es-ES');
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 64 64'><rect fill='%23031420' width='64' height='64'/><circle fill='%237be0ff' cx='32' cy='32' r='18'/><path fill='%23ffffff' d='M25 34l7-12 7 12h-14z'/></svg>"
    />
    <title>Mi Blog Personal | LlullBlog</title>
    <BlogStyles />
  </head>
  <body class="home-page">
    <header>
      <h1>¡Hola {nombre}!</h1>
      <p>Bienvenido a tu blog personal conectado a Supabase</p>
      <h2>Hoy es: {hoy}</h2>
    </header>

    <main>
      <section class="home-new-entry">
        <h2>Nueva entrada</h2>
        <form id="new-entry-form" class="entry-form">
          <div>
            <label for="entry-title">Título</label>
            <input id="entry-title" name="title" type="text" placeholder="Ej: Mi primer post" required />
          </div>
          <div>
            <label for="entry-body">Contenido</label>
            <textarea
              id="entry-body"
              name="body"
              rows="4"
              placeholder="Escribe aquí tu entrada..."
              required
            ></textarea>
          </div>
          <button type="submit" id="submit-btn">Guardar entrada</button>
          <div id="entry-status" class="entry-status" aria-live="polite"></div>
        </form>
      </section>

      <section>
        <h2>Mis entradas recientes (Nube)</h2>
        <div id="custom-entries-list" class="entry-list" aria-live="polite">
          <p class="muted">Cargando entradas desde Supabase...</p>
        </div>
      </section>

      <section>
        <h2><a href="/entradas">Ver todas las entradas</a></h2>
        <p>Accede al listado completo de publicaciones.</p>
      </section>
    </main>

    <script>
      import { createClient } from '@supabase/supabase-js';

      // 1. Configuración del cliente (usa tus variables de .env)
      const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
      const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
      const supabase = createClient(supabaseUrl, supabaseKey);

      const form = document.getElementById('new-entry-form') as HTMLFormElement;
      const titleEl = document.getElementById('entry-title') as HTMLInputElement;
      const bodyEl = document.getElementById('entry-body') as HTMLTextAreaElement;
      const statusEl = document.getElementById('entry-status') as HTMLElement;
      const listEl = document.getElementById('custom-entries-list') as HTMLElement;

      // Función para cargar y mostrar entradas desde Supabase
      const renderEntries = async () => {
        listEl.innerHTML = '<p class="muted">Actualizando...</p>';
        
        const { data: entries, error } = await supabase
          .from('entradas')
          .select('*')
          .order('created_at', { ascending: false })
          .limit(5); // Solo mostramos las últimas 5 en la home

        if (error) {
          listEl.innerHTML = '<p class="muted">Error al conectar con la base de datos.</p>';
          return;
        }

        if (!entries || entries.length === 0) {
          listEl.innerHTML = '<p class="muted">Aún no hay entradas en la nube.</p>';
          return;
        }

        listEl.innerHTML = '';
        entries.forEach((entry) => {
          const card = document.createElement('article');
          card.className = 'entry-card';
          card.innerHTML = `
            <h3>${entry.title}</h3>
            <p>${entry.body}</p>
            <p class="muted"><small>${entry.date || new Date(entry.created_at).toLocaleDateString('es-ES')}</small></p>
          `;
          listEl.appendChild(card);
        });
      };

      // Manejar el envío del formulario
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const title = titleEl.value.trim();
        const body = bodyEl.value.trim();
        const date = new Date().toLocaleDateString('es-ES');

        statusEl.textContent = 'Enviando a la nube...';

        // 2. Insertar en Supabase
        const { error } = await supabase
          .from('entradas')
          .insert([{ title, body, date }]);

        if (error) {
          statusEl.textContent = 'Error al guardar: ' + error.message;
          statusEl.style.color = '#ff6b6b';
        } else {
          statusEl.textContent = '¡Entrada guardada en la base de datos!';
          statusEl.style.color = '#7be0ff';
          form.reset();
          renderEntries(); // Recargamos la lista automáticamente
        }
      });

      // Carga inicial
      renderEntries();
    </script>
  </body>
</html>
