---
const nombre = "Eduardo";
const hoy = new Date().toLocaleDateString('es-ES');
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Blog Personal | {nombre}</title>
    
    <style is:global>
      /* RESET Y FONDO ORIGINAL */
      html, body {
        margin: 0;
        padding: 0;
        background-color: #030a12 !important; /* El azul muy oscuro de tu captura */
        color: #ffffff;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        min-height: 100vh;
      }

      body {
        background: radial-gradient(circle at top right, #0a1e30, #030a12 85%) !important;
        background-attachment: fixed !important;
      }

      header {
        padding: 3rem 1rem 1rem;
        text-align: center;
      }

      header h1 {
        font-size: 3rem;
        margin: 0;
        font-weight: 800;
      }

      /* LA ESTRUCTURA DE LA CAPTURA 1 */
      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      @media (min-width: 900px) {
        main {
          grid-template-columns: 1fr 1fr; /* Dos columnas reales */
        }
      }

      /* LAS CAJAS "GLASS" ORIGINALES */
      .glass-card {
        background: rgba(10, 25, 41, 0.7);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(0, 229, 255, 0.15);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
      }

      h2 {
        font-size: 1.2rem;
        letter-spacing: 1px;
        margin-bottom: 2rem;
        text-transform: uppercase;
        font-weight: 800;
      }

      /* INPUTS Y BOTÓN DE LA PRIMERA FOTO */
      .entry-form input, .entry-form textarea {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.2rem;
        color: #fff;
        margin-bottom: 1rem;
        font-size: 1rem;
        box-sizing: border-box;
      }

      .btn-cyan {
        width: 100%;
        background: #00e5ff;
        color: #000;
        font-weight: 800;
        padding: 1.2rem;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1rem;
        transition: transform 0.2s ease;
      }

      .btn-cyan:hover {
        transform: scale(1.01);
      }

      /* LISTADO DE RECIENTES */
      .feed-entry {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1.5rem 0;
      }
      .feed-entry h3 { margin: 0; font-size: 1.2rem; color: #fff; }
      .feed-entry p { margin: 0.5rem 0 0; color: #8cb9c8; }
      
      .link-view-all {
        color: #a855f7; /* El color lila de tu captura */
        text-decoration: underline;
        font-size: 0.8rem;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <header>
      <p style="text-align: center; font-size: 0.9rem; opacity: 0.8;">Hoy es: {hoy}</p>
    </header>

    <main>
      <section class="glass-card">
        <h2>NUEVA ENTRADA</h2>
        <form id="post-form" class="entry-form">
          <input name="title" type="text" placeholder="Título de la publicación" required />
          <textarea name="body" rows="6" placeholder="¿Qué tienes en mente?" required></textarea>
          <button type="submit" class="btn-cyan">Publicar ahora</button>
        </form>
      </section>

      <section class="glass-card">
        <div style="display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 1rem;">
          <h2>RECIENTES</h2>
          <a href="/entradas" class="link-view-all">VER TODAS</a>
        </div>
        <div id="posts-container">
          <p>Cargando posts...</p>
        </div>
      </section>
    </main>

    <script>
      import { createClient } from '@supabase/supabase-js';
      const supabase = createClient(import.meta.env.PUBLIC_SUPABASE_URL, import.meta.env.PUBLIC_SUPABASE_ANON_KEY);
      const container = document.getElementById('posts-container');

      const fetchPosts = async () => {
        const { data } = await supabase.from('entradas').select('*').order('created_at', { ascending: false }).limit(5);
        if (container && data) {
          container.innerHTML = data.map(p => `
            <div class="feed-entry">
              <h3>${p.title}</h3>
              <p>${p.body}</p>
            </div>
          `).join('');
        }
      };

      document.getElementById('post-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const fd = new FormData(e.target as HTMLFormElement);
        await supabase.from('entradas').insert([{ title: fd.get('title'), body: fd.get('body') }]);
        (e.target as HTMLFormElement).reset();
        fetchPosts();
      });
      fetchPosts();
    </script>
  </body>
</html>