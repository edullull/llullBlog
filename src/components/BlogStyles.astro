<style is:global>
  :root {
    --bg-color: #050a14;
    --card-bg: #0f172a;
    --accent-blue: #00d4ff;
    --text-main: #ffffff;
    --text-muted: #94a3b8;
    --text-purple: #a855f7;
    --text-danger: #ff6b6b;
    --border-color: rgba(255, 255, 255, 0.1);
  }

  /* BASE */
  html, body {
    margin: 0;
    padding: 0;
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  body {
    background: radial-gradient(circle at top right, #0a1e30, #050a14 80%);
    background-attachment: fixed;
    min-height: 100vh;
    padding: 1rem;
    box-sizing: border-box;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }

  /* HEADER */
  .header {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 2rem;
  }

  .top-label {
    color: var(--accent-blue);
    font-weight: 800;
    letter-spacing: 3px;
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  h1 {
    font-size: 2.8rem;
    margin: 0.5rem 0;
    font-weight: 900;
    line-height: 1.1;
  }

  .date {
    color: var(--text-muted);
    font-size: 0.95rem;
    opacity: 0.8;
  }

  /* GRID COMPLETO */
  .main-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: start;
  }

  .grid-all {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  /* SECCIONES */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .section-title {
    color: var(--accent-blue);
    font-size: 0.85rem;
    letter-spacing: 2px;
    font-weight: 800;
    margin: 0;
    text-transform: uppercase;
  }

  .view-all {
    color: var(--text-purple);
    text-decoration: none;
    font-size: 0.7rem;
    font-weight: bold;
    border: 1.5px solid var(--text-purple);
    padding: 6px 14px;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .view-all:hover {
    background: var(--text-purple);
    color: white;
    box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);
  }

  /* TARJETAS CON EFECTO HOVER */
  .blog-card {
    background-color: var(--card-bg);
    border-radius: 20px;
    border: 1px solid var(--border-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    border-color: var(--accent-blue);
    box-shadow: 0 15px 40px rgba(0, 212, 255, 0.15);
  }

  .main-form-container {
    padding: 2rem;
  }

  .entries-stack {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .entry-cell {
    padding: 1.5rem;
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.8rem;
    gap: 12px;
  }

  .entry-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .time-tag {
    font-size: 0.75rem;
    color: var(--text-muted);
    background: rgba(255,255,255,0.05);
    padding: 4px 8px;
    border-radius: 6px;
    white-space: nowrap;
  }

  .entry-content {
    color: var(--text-muted);
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
  }

  /* BOTÓN ELIMINAR */
  .btn-delete {
    background: transparent;
    border: 1px solid var(--text-danger);
    color: var(--text-danger);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.8rem;
    font-weight: bold;
    margin-top: auto; /* Empuja el botón al final */
    align-self: flex-start;
    transition: all 0.2s;
    opacity: 0.8;
  }

  .btn-delete:hover {
    background: var(--text-danger);
    color: white;
    opacity: 1;
  }

  /* FORMULARIO */
  .form-layout {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .input-field, .textarea-field {
    background: #060b18;
    border: 1px solid #1e293b;
    border-radius: 12px;
    padding: 1rem;
    color: white;
    width: 100%;
    box-sizing: border-box;
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  .input-field:focus, .textarea-field:focus {
    outline: none;
    border-color: var(--accent-blue);
  }

  .textarea-field {
    min-height: 150px;
    resize: vertical;
  }

  .publish-button {
    background-color: var(--accent-blue);
    color: #050a14;
    border: none;
    padding: 1.1rem;
    border-radius: 14px;
    font-weight: 900;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .publish-button:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
  }

  .publish-button:disabled {
    opacity: 0.5;
    transform: none;
    cursor: not-allowed;
  }

  .muted {
    color: var(--text-muted);
    text-align: center;
    padding: 2rem;
    width: 100%;
  }

  @media (min-width: 900px) {
    body { padding: 2rem; }
    h1 { font-size: 3.8rem; }
    .main-grid { grid-template-columns: 1fr 1.2fr; gap: 4rem; }
  }
</style>