<style is:global>
  :root {
    --bg-color: #050a14;
    --card-bg: #0f172a;
    --accent-blue: #00d4ff;
    --text-main: #ffffff;
    --text-muted: #94a3b8;
    --text-purple: #a855f7;
    --border-color: rgba(255, 255, 255, 0.1);
  }

  body {
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    margin: 0;
    padding: 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* HEADER */
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .top-label {
    color: var(--accent-blue);
    font-weight: bold;
    letter-spacing: 2px;
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  h1 {
    font-size: 3.5rem;
    margin: 0.5rem 0;
    font-weight: 800;
  }

  .date {
    color: var(--text-muted);
    font-size: 1rem;
  }

  /* GRID PRINCIPAL: 50% / 50% */
  .main-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: 2.5rem;
    align-items: start;
  }

  /* SECCIONES */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .section-title {
    color: var(--accent-blue);
    font-size: 0.85rem;
    letter-spacing: 1.5px;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase;
  }

  .view-all {
    color: var(--text-purple);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: bold;
    border: 1px solid var(--text-purple);
    padding: 6px 14px;
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .view-all:hover {
    background: var(--text-purple);
    color: white;
  }

  /* ESTILO DE TARJETAS / CELDAS */
  .blog-card {
    background-color: var(--card-bg);
    border-radius: 20px;
    border: 1px solid var(--border-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  /* Contenedor del formulario */
  .main-form-container {
    padding: 2rem;
  }

  /* Lista de entradas (Recientes) */
  .entries-stack {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  /* Celda individual de cada post */
  .entry-cell {
    padding: 1.5rem;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .entry-cell:hover {
    transform: translateY(-3px);
    border-color: var(--accent-blue);
  }

  .entry-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .entry-content {
    color: var(--text-muted);
    margin: 0;
    line-height: 1.5;
  }

  /* INPUTS Y FORMULARIO */
  .form-layout {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .input-field, .textarea-field {
    background: #0a1120;
    border: 1px solid #1e293b;
    border-radius: 12px;
    padding: 1rem;
    color: white;
    font-size: 1rem;
    width: 100%;
    box-sizing: border-box;
    outline: none;
  }

  .input-field:focus, .textarea-field:focus {
    border-color: var(--accent-blue);
  }

  .textarea-field {
    min-height: 160px;
    resize: none;
  }

  /* BOTÃ“N PUBLICAR */
  .publish-button {
    background-color: var(--accent-blue);
    color: #000;
    border: none;
    padding: 1.1rem;
    border-radius: 14px;
    font-weight: 800;
    font-size: 1rem
  }