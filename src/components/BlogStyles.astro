<style is:global>
  :root {
    --bg-color: #050a14;
    --card-bg: #0f172a;
    --accent-blue: #00d4ff;
    --text-main: #ffffff;
    --text-muted: #94a3b8;
    --text-purple: #a855f7;
    --border-color: rgba(255, 255, 255, 0.1);
  }

  body {
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    margin: 0;
    padding: 1rem; /* Reducido para móviles */
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }

  /* HEADER */
  .header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .top-label {
    color: var(--accent-blue);
    font-weight: bold;
    letter-spacing: 2px;
    font-size: 0.7rem;
    text-transform: uppercase;
  }

  h1 {
    font-size: 2.5rem; /* Ajustado para mejor respuesta */
    margin: 0.5rem 0;
    font-weight: 800;
  }

  .date {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  /* GRID PRINCIPAL: 1fr 1fr en escritorio, 1fr en móvil */
  .main-grid {
    display: grid;
    grid-template-columns: 1fr; /* Por defecto 1 columna (móvil) */
    gap: 2rem;
    align-items: start;
  }

  /* SECCIONES */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section-title {
    color: var(--accent-blue);
    font-size: 0.8rem;
    letter-spacing: 1.5px;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase;
  }

  .view-all {
    color: var(--text-purple);
    text-decoration: none;
    font-size: 0.7rem;
    font-weight: bold;
    border: 1px solid var(--text-purple);
    padding: 5px 12px;
    border-radius: 8px;
  }

  /* TARJETAS Y CELDAS */
  .blog-card {
    background-color: var(--card-bg);
    border-radius: 18px;
    border: 1px solid var(--border-color);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
  }

  .main-form-container {
    padding: 1.5rem;
  }

  .entries-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .entry-cell {
    padding: 1.2rem;
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    gap: 10px;
  }

  .entry-title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
  }

  .time-tag {
    font-size: 0.7rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .entry-content {
    color: var(--text-muted);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  /* FORMULARIO */
  .form-layout {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .input-field, .textarea-field {
    background: #0a1120;
    border: 1px solid #1e293b;
    border-radius: 10px;
    padding: 0.8rem;
    color: white;
    width: 100%;
    box-sizing: border-box;
    font-size: 1rem;
  }

  .textarea-field {
    min-height: 120px;
    resize: none;
  }

  .publish-button {
    background-color: var(--accent-blue);
    color: #000;
    border: none;
    padding: 1rem;
    border-radius: 12px;
    font-weight: 800;
    cursor: pointer;
  }

  /* --- MEDIA QUERY PARA ESCRITORIO --- */
  @media (min-width: 900px) {
    body {
      padding: 2rem;
    }
    
    h1 {
      font-size: 3.5rem;
    }

    .main-grid {
      grid-template-columns: 1fr 1fr; /* Aquí se activan las dos columnas iguales */
      gap: 3rem;
    }

    .main-form-container {
      padding: 2rem;
    }

    .entry-cell {
      padding: 1.5rem;
    }
  }
</style>